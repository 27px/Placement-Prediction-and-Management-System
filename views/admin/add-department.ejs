<div class="full-wrap min-full">
  <div class="image department-image"></div>
  <form action="" method="POST">
    <div class="row">
      <div class="title">Add Department</div>
    </div>
    <div class="row">
      <label for="name">Department Name</label>
      <input type="name" name="department" id="department" placeholder="Department Name" required>
    </div>
    <div class="row">
      <label for="name">Department Type</label>
      <select name="type" id="department-type">
        <option value="0" selected>Non Engineering</option>
        <option value="1">Engineering</option>
      </select>
    </div>
    <div class="row">
      <div class="message" id="add-department-message"></div>
    </div>
    <div class="row">
      <button type="button" onclick="addDepartment(event);" id="add-department-button">
        <span>Add</span>
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#FFFFFF" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="12" y1="2" x2="12" y2="6"></line><line x1="12" y1="18" x2="12" y2="22"></line><line x1="4.93" y1="4.93" x2="7.76" y2="7.76"></line><line x1="16.24" y1="16.24" x2="19.07" y2="19.07"></line><line x1="2" y1="12" x2="6" y2="12"></line><line x1="18" y1="12" x2="22" y2="12"></line><line x1="4.93" y1="19.07" x2="7.76" y2="16.24"></line><line x1="16.24" y1="7.76" x2="19.07" y2="4.93"></line></svg>
      </button>
    </div>
  </form>
</div>
