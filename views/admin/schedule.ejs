<div class="full-wrap min-full">
  <div class="image schedule-image"></div>
  <div class="scheduler">
    <%
      if(companies.length>0)
      {
        companies.forEach(company=>{
          %>
            <div class="schedule">
              <div class="company"><%=company.data.name%></div>
              <div class="job"><%=company.data.job.title%></div>
              <div class="salary">Salary : <%=company.data.job.salary%></div>
              <div class="vacancy">Vacancy : <%=company.data.job.vacancy%></div>
              <div class="date"><%=company.data.job.schedule.date%></div>
              <div class="right">
                <button data-email="<%=company.email%>" onclick="acceptSchedule(event);">
                  <span>Accept</span>
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="#FFFFFF" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="12" y1="2" x2="12" y2="6"></line><line x1="12" y1="18" x2="12" y2="22"></line><line x1="4.93" y1="4.93" x2="7.76" y2="7.76"></line><line x1="16.24" y1="16.24" x2="19.07" y2="19.07"></line><line x1="2" y1="12" x2="6" y2="12"></line><line x1="18" y1="12" x2="22" y2="12"></line><line x1="4.93" y1="19.07" x2="7.76" y2="16.24"></line><line x1="16.24" y1="7.76" x2="19.07" y2="4.93"></line></svg>
                </button>
              </div>
            </div>
          <%
        })
      }
      else
      {
        %>
          <div class="schedule">Nothing pending</div>
        <%
      }
    %>
  </div>
</div>
